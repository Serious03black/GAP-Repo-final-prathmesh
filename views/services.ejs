  <style>
    /* Premium Fashion Design */
    :root {
      --gold: #caa437;
      --gold-light: #e6c672;
      --gold-dark: #9c8126;
      --black: #000000;
      --charcoal: #121212;
      --dark-gray: #1a1a1a;
      --light-gray: #2a2a2a;
      --white: #ffffff;
      --off-white: #f5f5f5;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      background: var(--black);
      color: var(--white);
      font-family: 'Montserrat', sans-serif;
      overflow-x: hidden;
    }

    /* Luxury Header */
    .luxury-header {
      position: fixed;
      top: 0;
      width: 100%;
      background: rgba(0, 0, 0, 0.95);
      backdrop-filter: blur(10px);
      z-index: 1000;
      border-bottom: 1px solid rgba(202, 164, 55, 0.2);
    }

    .luxury-nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 20px 40px;
      max-width: 1400px;
      margin: 0 auto;
    }

    .luxury-logo {
      font-size: 24px;
      font-weight: 700;
      color: var(--gold);
      text-decoration: none;
      letter-spacing: 2px;
    }

    .luxury-menu {
      display: flex;
      gap: 40px;
    }

    .luxury-menu a {
      color: var(--off-white);
      text-decoration: none;
      font-weight: 500;
      letter-spacing: 1px;
      font-size: 14px;
      text-transform: uppercase;
      transition: all 0.3s ease;
      position: relative;
    }

    .luxury-menu a:hover {
      color: var(--gold);
    }

    .luxury-menu a.active {
      color: var(--gold);
    }

    .luxury-menu a.active::after {
      content: '';
      position: absolute;
      bottom: -5px;
      left: 0;
      width: 100%;
      height: 1px;
      background: var(--gold);
    }

    .book-demo-btn {
      background: var(--gold);
      color: var(--black);
      padding: 12px 28px;
      border-radius: 0;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 2px;
      font-size: 12px;
      border: none;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .book-demo-btn:hover {
      background: var(--gold-light);
      transform: translateY(-2px);
    }

    /* Hero Section */
    .luxury-hero {
      min-height: 100vh;
      display: flex;
      align-items: center;
      background: linear-gradient(rgba(0,0,0,0.8), rgba(0,0,0,0.9)),
                  url('https://images.unsplash.com/photo-1539109136881-3be0616acf4b?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80');
      background-size: cover;
      background-position: center;
      padding: 0 40px;
      margin-top: 80px;
    }

    .hero-content {
      max-width: 1400px;
      margin: 0 auto;
      width: 100%;
    }

    .hero-title {
      font-size: 5.5rem;
      font-weight: 300;
      line-height: 1;
      margin-bottom: 20px;
      letter-spacing: 3px;
      text-transform: uppercase;
    }

    .hero-subtitle {
      font-size: 1.2rem;
      color: var(--gold);
      max-width: 600px;
      line-height: 1.6;
      letter-spacing: 1px;
      margin-bottom: 40px;
    }

    .hero-accent {
      color: var(--gold);
      font-weight: 400;
    }

    /* Services Grid - Ultra Premium */
    .premium-services {
      padding: 120px 40px;
      background: var(--black);
      max-width: 1600px;
      margin: 0 auto;
    }

    .services-title {
      text-align: center;
      font-size: 2.5rem;
      font-weight: 300;
      letter-spacing: 3px;
      margin-bottom: 80px;
      color: var(--gold);
      text-transform: uppercase;
      position: relative;
    }

    .services-title::after {
      content: '';
      position: absolute;
      bottom: -20px;
      left: 50%;
      transform: translateX(-50%);
      width: 100px;
      height: 1px;
      background: var(--gold);
    }

    /* Service Card Design */
    .service-card {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 60px;
      margin-bottom: 120px;
      align-items: center;
      opacity: 0;
      transform: translateY(50px);
      transition: all 0.8s ease;
    }

    .service-card.visible {
      opacity: 1;
      transform: translateY(0);
    }

    .service-card:nth-child(even) .service-image {
      order: 2;
    }

    .service-card:nth-child(even) .service-content {
      order: 1;
      text-align: right;
    }

    .service-image {
      position: relative;
      overflow: hidden;
      height: 600px;
    }

    .service-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 1s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .service-card:hover .service-image img {
      transform: scale(1.05);
    }

    .service-image::after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(45deg, rgba(202, 164, 55, 0.1), transparent);
      pointer-events: none;
    }

    .service-number {
      font-size: 14px;
      color: var(--gold);
      margin-bottom: 20px;
      letter-spacing: 2px;
      font-weight: 500;
