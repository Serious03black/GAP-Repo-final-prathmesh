    // Parallax Effect
    window.addEventListener('scroll', function() {
      const scrolled = window.pageYOffset;
      const hero = document.querySelector('.luxury-hero');
      const rate = scrolled * 0.5;
      
      if (hero) {
        hero.style.transform = `translate3d(0, ${rate}px, 0)`;
      }
    });

    // Mouse Move Parallax on Images
    document.querySelectorAll('.service-image').forEach(image => {
      image.addEventListener('mousemove', function(e) {
        const width = this.offsetWidth;
        const height = this.offsetHeight;
        const mouseX = e.offsetX;
        const mouseY = e.offsetY;
        
        const moveX = (mouseX - width / 2) * 0.01;
        const moveY = (mouseY - height / 2) * 0.01;
        
        this.style.transform = `perspective(1000px) rotateY(${moveX}deg) rotateX(${-moveY}deg)`;
      });
      
      image.addEventListener('mouseleave', function() {
        this.style.transform = 'perspective(1000px) rotateY(0) rotateX(0)';
      });
    });
