      font-size: 1.1rem;
      color: var(--gold);
      margin-bottom: 30px;
      letter-spacing: 1px;
      line-height: 1.6;
    }

    .service-features-list {
      list-style: none;
      margin-bottom: 40px;
    }

    .service-features-list li {
      color: var(--off-white);
      margin-bottom: 15px;
      font-size: 15px;
      letter-spacing: 0.5px;
      position: relative;
      padding-left: 25px;
      line-height: 1.6;
    }

    .service-features-list li::before {
      content: '—';
      position: absolute;
      left: 0;
      color: var(--gold);
    }

    .service-card:nth-child(even) .service-features-list li {
      padding-left: 0;
      padding-right: 25px;
    }

    .service-card:nth-child(even) .service-features-list li::before {
      left: auto;
      right: 0;
    }

    .service-action-btn {
