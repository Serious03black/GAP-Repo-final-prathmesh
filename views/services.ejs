/* ==========================================================================
   Service Section – Landscape on desktop, stacked on mobile
   ========================================================================== */
.service-zigzag {
  position: relative;
  padding: 80px 0;
  background: #000;
  overflow: hidden;
}

.service-zigzag::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle at 20% 50%, rgba(202, 164, 55, 0.08) 0%, transparent 60%),
              radial-gradient(circle at 80% 20%, rgba(202, 164, 55, 0.04) 0%, transparent 60%);
  z-index: 1;
}

/* Card */
.service-item-zigzag {
  background: rgba(20, 20, 20, 0.92);
  border-radius: 16px;
  padding: 28px;
  margin-bottom: 60px;
  position: relative;
  z-index: 2;
  border: 1px solid rgba(202, 164, 55, 0.25);
  transition: transform 0.35s ease, box-shadow 0.35s ease, border-color 0.35s ease;
  backdrop-filter: blur(8px);
  max-width: 1100px;
  margin-left: auto;
  margin-right: auto;
}

.service-item-zigzag:hover {
  transform: translateY(-6px);
  border-color: #caa437;
  box-shadow: 0 12px 30px rgba(202, 164, 55, 0.18);
}

/* Desktop layout: image left + content right */
.service-row {
  display: flex;
  align-items: center;
  gap: 40px;
  flex-wrap: nowrap;
}

.service-image-wrapper {
  flex: 0 0 45%;
  max-width: 480px;
  border-radius: 12px;
  overflow: hidden;
  position: relative;
  background: #111;
  box-shadow: 0 6px 20px rgba(0,0,0,0.6);
}

.service-image-wrapper::before {
  content: "";
  display: block;
  padding-top: 75%;                   /* ≈4:3 landscape on desktop */
}

.service-image {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #111 0%, #000 100%);
}

.service-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  transition: transform 0.5s ease;
}

.service-item-zigzag:hover .service-image img {
  transform: scale(1.05);
}

.service-content {
  flex: 1;
}

/* ───────────────────────────────────────────────
   MOBILE – images become visible + full width
   ─────────────────────────────────────────────── */
@media (max-width: 991px) {
  .service-row {
    flex-direction: column;
    gap: 24px;
  }

  .service-image-wrapper {
    flex: 0 0 auto;
    max-width: 100%;
    width: 100%;
  }

  .service-image-wrapper::before {
    padding-top: 66.67%;              /* better mobile proportion (≈3:2) */
    /* You can change to 75% or 80% if you prefer wider images on mobile */
  }

  .service-item-zigzag {
    padding: 24px;
    margin-bottom: 50px;
  }

  .service-title {
    font-size: 24px;
  }

  /* Remove side offset on mobile */
  .service-item-zigzag:nth-child(odd),
  .service-item-zigzag:nth-child(even) {
    transform: translateX(0) !important;
  }
}

@media (max-width: 576px) {
  .service-item-zigzag {
    padding: 20px;
  }

  .service-title {
    font-size: 22px;
  }
}

/* Zigzag offset – only on desktop */
@media (min-width: 992px) {
  .service-item-zigzag:nth-child(odd) {
    transform: translateX(-60px);
  }

  .service-item-zigzag:nth-child(even) {
