    }

    .service-card:nth-child(even) .service-action-btn:hover {
      padding-left: 20px;
      padding-right: 0;
    }

    /* Fixed Call to Action */
    .fixed-cta {
      position: fixed;
      bottom: 40px;
      right: 40px;
      z-index: 1000;
      display: flex;
      flex-direction: column;
      gap: 15px;
    }

    .cta-button {
      width: 60px;
      height: 60px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--black);
      text-decoration: none;
      font-size: 20px;
      transition: all 0.3s ease;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    }

    .whatsapp-btn {
      background: #25D366;
    }

    .call-btn {
      background: var(--gold);
    }

    .cta-button:hover {
      transform: scale(1.1);
      box-shadow: 0 15px 40px rgba(0, 0, 0, 0.4);
    }

    /* Responsive Design */
    @media (max-width: 1200px) {
      .service-card {
        gap: 40px;
      }
      
      .service-card-title {
        font-size: 2.5rem;
      }
      
      .service-image {
        height: 500px;
      }
    }

    @media (max-width: 992px) {
      .service-card {
        grid-template-columns: 1fr;
        gap: 40px;
      }
      
      .service-card:nth-child(even) .service-image {
        order: 1;
      }
      
      .service-card:nth-child(even) .service-content {
        order: 2;
        text-align: left;
      }
      
      .service-card:nth-child(even) .service-features-list li {
        padding-left: 25px;
        padding-right: 0;
      }
      
      .service-card:nth-child(even) .service-features-list li::before {
        left: 0;
        right: auto;
      }
      
      .service-image {
        height: 400px;
      }
      
      .hero-title {
        font-size: 4rem;
      }
    }

    @media (max-width: 768px) {
      .luxury-nav {
        padding: 15px 20px;
      }
      
      .luxury-menu {
        display: none;
      }
      
      .hero-title {
        font-size: 3rem;
      }
      
      .premium-services {
        padding: 80px 20px;
      }
      
      .service-card-title {
        font-size: 2rem;
      }
      
      .service-image {
        height: 350px;
      }
      
      .fixed-cta {
        bottom: 20px;
        right: 20px;
      }
    }

    /* Animation Keyframes */
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(50px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
