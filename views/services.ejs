    .service-zigzag {
      position: relative;
      padding: 100px 0;
      background: #000;
      overflow: hidden;
    }

    .service-zigzag::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: radial-gradient(circle at 20% 50%, rgba(202, 164, 55, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 80% 20%, rgba(202, 164, 55, 0.05) 0%, transparent 50%);
      z-index: 1;
    }

    .service-item-zigzag {
      background: rgba(20, 20, 20, 0.9);
      border-radius: 20px;
      padding: 40px;
      margin-bottom: 100px;
      position: relative;
      z-index: 2;
      border: 1px solid rgba(202, 164, 55, 0.2);
      transition: all 0.4s ease;
      backdrop-filter: blur(10px);
    }

    .service-item-zigzag:hover {
      transform: translateY(-10px);
      border-color: #caa437;
      box-shadow: 0 20px 40px rgba(202, 164, 55, 0.15);
    }

    .service-item-zigzag:nth-child(even) {
      margin-left: 50px;
    }

    .service-item-zigzag:nth-child(odd) {
      margin-right: 50px;
    }

    .service-row {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      gap: 40px;
    }

    .service-content {
      flex: 1;
      min-width: 300px;
    }

    .service-image-wrapper {
      flex: 1;
      min-width: 300px;
      border-radius: 15px;
      overflow: hidden;
      position: relative;
    }

    .service-image-wrapper::before {
      content: "";
      display: block;
      padding-top: 75%;          /* ≈4:3 ratio – change to 56.25% for 16:9 if you prefer wider */
    }

    .service-image {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }

    .service-image img {
      width: 100%;
      height: 100%;
      object-fit: contain;
      transition: transform 0.5s ease;
    }

    .service-item-zigzag:hover .service-image img {
      transform: scale(1.05);
    }

    .service-image::after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(45deg, rgba(202, 164, 55, 0.1), transparent);
      pointer-events: none;
    }

    .service-icon {
      width: 70px;
      height: 70px;
      background: rgba(202, 164, 55, 0.1);
      border-radius: 50%;
      display: flex;
      align-items: center;
