  <script>
    let idleTimer = null;
    const IDLE_TIMEOUT = 600000; // 10 minutes in ms

    function nextStep() {
      document.getElementById("step1").classList.add("hidden");
      document.getElementById("step2").classList.remove("hidden");
      document.getElementById("dot1").classList.remove("active");
      document.getElementById("dot2").classList.add("active");
      startIdleTimer();
      setupIdleResetListeners();
    }

    function prevStep() {
      document.getElementById("step2").classList.add("hidden");
      document.getElementById("step1").classList.remove("hidden");
      document.getElementById("dot2").classList.remove("active");
      document.getElementById("dot1").classList.add("active");
      clearTimeout(idleTimer);
      removeIdleResetListeners();
    }

    function startIdleTimer() {
      clearTimeout(idleTimer);
      idleTimer = setTimeout(autoSubmit, IDLE_TIMEOUT);
    }

    function autoSubmit() {
      const messageInput = document.querySelector('[name="message"]');
      if (!messageInput.value.trim()) {
        messageInput.value = "Partial submission: User became idle after filling basic information.";
      }
      document.getElementById("contactForm").submit(); // Direct submit, bypasses event listener
    }

    function setupIdleResetListeners() {
      const step2Inputs = document.querySelectorAll('#step2 input, #step2 select, #step2 textarea');
      step2Inputs.forEach(input => {
        input.addEventListener('input', startIdleTimer);
        input.addEventListener('change', startIdleTimer);
      });
      document.addEventListener('keydown', startIdleTimer);
      document.addEventListener('mousemove', startIdleTimer);
    }

    function removeIdleResetListeners() {
      const step2Inputs = document.querySelectorAll('#step2 input, #step2 select, #step2 textarea');
      step2Inputs.forEach(input => {
        input.removeEventListener('input', startIdleTimer);
        input.removeEventListener('change', startIdleTimer);
      });
      document.removeEventListener('keydown', startIdleTimer);
      document.removeEventListener('mousemove', startIdleTimer);
    }

