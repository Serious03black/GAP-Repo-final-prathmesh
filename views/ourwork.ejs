    /* Reels Section */
    .reels-container {
      padding: 100px 0;
      background: #000;
      min-height: 100vh;
    }

    .section-title {
      font-size: 3rem;
      font-weight: 700;
      margin-bottom: 20px;
    }

    .reels-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
      gap: 30px;
      max-width: 1400px;
      margin: 0 auto;
      padding: 0 20px;
    }

    .reel-item {
      position: relative;
      width: 100%;
      padding-top: 177.78%; /* 9:16 aspect ratio */
      overflow: hidden;
      border-radius: 16px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
      background: #111;
      cursor: pointer;
    }

    .reel-video {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.4s ease;
    }

    .reel-item:hover .reel-video {
      transform: scale(1.06);
    }

    .play-icon-overlay {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      font-size: 4rem;
      color: white;
      opacity: 0.9;
      pointer-events: none;
      z-index: 2;
      transition: opacity 0.4s ease;
    }

    .reel-item.playing .play-icon-overlay {
      opacity: 0;
    }

    @keyframes pulse {
      0% { transform: translate(-50%, -50%) scale(1); }
      50% { transform: translate(-50%, -50%) scale(1.15); }
      100% { transform: translate(-50%, -50%) scale(1); }
    }

    @media (max-width: 768px) {
      .play-icon-overlay {
        opacity: 0.9;
        animation: pulse 2s infinite;
      }
      .reels-grid {
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 20px;
      }
      .section-title {
        font-size: 2.5rem;
      }
    }

    @media (max-width: 480px) {
      .reels-grid {
        grid-template-columns: 1fr;
      }
    }

    .reel-overlay {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      padding: 30px 20px 20px;
      background: linear-gradient(transparent, rgba(0,0,0,0.9));
      color: white;
      opacity: 0;
      transition: opacity 0.4s ease;
    }

    .reel-item:hover .reel-overlay,
    .reel-item.playing .reel-overlay {
      opacity: 1;
    }

    .reel-title {
      font-size: 1.3rem;
      font-weight: 600;
